{
  "name": "himnarioadventistapro",
  "version": "1.0.102",
  "description": "Himnario Adventista optimizado y fácil de usar, creado por PROYECTO JA",
  "author": "PROYECTO JA - Kendall Torres <kendall.torres.17@gmail.com>",
  "main": "main.js",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "release": "electron-builder --publish always",
    "release-draft": "electron-builder --publish onTagOrDraft",
    "release-local": "electron-builder --publish never",
    "prerelease": "npm version patch -m \"Versión %s\"",
    "postinstall": "electron-builder install-app-deps",
    "deploy": "npm version patch --no-git-tag-version && git add . && (git commit -m \"Auto bump\" || true) && git push"
  },
  "keywords": [],
  "build": {
    "asar": true,
    "appId": "com.proyectoja.himnarioadventistapro",
    "productName": "Himnario Adventista Pro",
    "directories": {
      "output": "dist"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "proyectoja",
        "repo": "HimnarioApp",
        "private": false,
        "releaseType": "release"
      }
    ],
    "files": [
      "src/**/*",
      "!src/prueba/**",
      "!src/audios*/**",
      "!src/musicaParaOrarDeFondo/**",
      "!src/portadas*/**",
      "!src/videos*/**",
      "!src/versionesBiblias/**",
      "controlRemoto.js",
      "control-remoto.html",
      "downloader.js",
      "installer.nsh",
      "log.html",
      "logHelper.js",
      "main.js",
      "package.json",
      "preload.js",
      "verificarWrapper.js"
    ],
    "win": {
      "forceCodeSigning": false,
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "src/iconos/iconoWindows.ico",
      "artifactName": "${productName} Setup ${version}.${ext}"
    },
    "nsis": {
      "oneClick": true,
      "runAfterFinish": true,
      "installerIcon": "src/iconos/iconoWindows.ico",
      "uninstallerIcon": "src/iconos/iconoWindows.ico",
      "uninstallDisplayName": "Himnario Adventista Pro Desinstalador",
      "perMachine": true,
      "allowElevation": true,
      "deleteAppDataOnUninstall": true,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Himnario Adventista Pro",
      "license": "src/licencia/licencia.txt",
      "include": "installer.nsh"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        "pkg"
      ],
      "icon": "src/iconos/iconoMac.icns",
      "artifactName": "${productName} ${version} ${arch}.${ext}",
      "hardenedRuntime": false,
      "entitlements": null,
      "identity": null
    },
    "dmg": {
      "title": "${productName} ${arch}",
      "icon": "src/iconos/iconoMac.icns",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "icon": "src/iconos/iconoLinux.png"
    }
  },
  "devDependencies": {
    "electron": "^33.2.1",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "axios": "^1.13.2",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "express": "^5.1.0",
    "fs-extra": "^11.3.2",
    "loudness": "^0.4.2",
    "node-fetch": "^3.3.2",
    "pdf-poppler": "^0.2.3",
    "systeminformation": "^5.27.11"
  }
}
